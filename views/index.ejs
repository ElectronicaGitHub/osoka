<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Document</title>
	<!-- // <script src="/javascripts/Faye 1.0.1/browser/faye-browser-min.js"></script> -->
	<link href='http://fonts.googleapis.com/css?family=Open+Sans:800,700,400&subset=latin,cyrillic-ext' rel='stylesheet' type='text/css'>
	<link rel="stylesheet" href="/libs/bootstrap/dist/css/bootstrap.min.css">
	<script src="/libs/jquery/dist/jquery.min.js"></script>
	<script src="/libs/angular/angular.min.js"></script>
	<script>
	app = angular.module('app', [])
	.controller('GameCtrl', ['$scope', '$http', function ($scope, $http) {
		var uuidString = function() {
		    return Math.random().toString(36).substring(7)
		}
		$scope.name = '';
		$scope.createGame = function(game_name, playersPerTeam) {
			var url = '/game';
			var data = {
				id : uuidString(),
				game_name : game_name,
				playersPerTeam : playersPerTeam 
			} 
			$http.post(url, data)
				.success(function(data) {
					console.log(data);
					
				})
				.error(function(data) {
					console.log(data)
				})
		}
	}])
	</script>

	<script src="/javascripts/socket.io-client/socket.io.js"></script>
</head>
<body ng-app="app" ng-controller="GameCtrl">
	<div class="pregame centered">	
		<p class="name_label">Enter your name sir</p>
		<input class="bb" type="text" ng-model="name">
		<div class="row" style="margin:0">
			<div class=" col-sm-6 col-md-6 col-lg-6 name_label">Games</div>
			<div class=" col-sm-6 col-md-6 col-lg-6 name_label">Create</div>
		</div>
		<div class="game-create">
			<input type="text" ng-model="game_name">
			<input type="number" ng-model="players">
			<button ng-click="createGame(game_name, players)">Создать</button>

		</div>
	</div>
